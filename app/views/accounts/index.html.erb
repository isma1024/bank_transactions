<section class="content">

  <div class="row">

    <div class="col-md-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Listing Accounts</h3>
        </div>

        <div class="box-body">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Balance</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
            <% @accounts.each do |account| %>
                <tr>
                  <td><%= link_to account.name, account_transactions_path(account) %></td>
                  <td><%= account.balance %> &euro;</td>
                  <td>
                    <%= link_to 'Edit', edit_account_path(account), { :class => 'btn btn-xs btn-warning' } %>
                    <%= link_to 'Delete', account, :method => 'delete', :class => 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <div class="box-footer">
          <%= link_to 'New account', new_account_path, { :class => 'btn btn-primary' } %>
        </div>

      </div>
    </div>

  </div>

</section>

